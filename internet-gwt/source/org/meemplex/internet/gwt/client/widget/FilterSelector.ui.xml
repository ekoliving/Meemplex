<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.label {
			font-size: 20px;
			font-weight: bold;
			line-height: 30px;
			margin-left: 10px;
			margin-right: 10px;
		}
		.button {
			margin-left: 5px;
			width: 80px;
			height: 80px;
			line-height: 80px;
			font-size: 16px;
			font-weight: bold;
			text-align: center;
		}
	</ui:style>
	
		<g:HorizontalPanel>
			<g:Label addStyleNames="{style.label}">Function: </g:Label>
			<g:HorizontalPanel>
			<!-- 
				<g:ToggleButton ui:field="buttonAll" >All</g:ToggleButton>
			 -->
			 
				<g:ToggleButton ui:field="buttonLights" addStyleNames="{style.button}">Lights</g:ToggleButton>
				<g:ToggleButton ui:field="buttonBlinds" addStyleNames="{style.button}">Blinds</g:ToggleButton>
				<g:ToggleButton ui:field="buttonLocks" addStyleNames="{style.button}">Locks</g:ToggleButton>
			</g:HorizontalPanel>
			
			<g:Label addStyleNames="{style.label}">Location: </g:Label>
			<g:HorizontalPanel>
				<g:ToggleButton ui:field="buttonHouse" addStyleNames="{style.button}">House</g:ToggleButton>
				<g:ToggleButton ui:field="buttonBed1" addStyleNames="{style.button}">Bedroom 1</g:ToggleButton>
				<g:ToggleButton ui:field="buttonBed2" addStyleNames="{style.button}">Bedroom 2</g:ToggleButton>
				<g:ToggleButton ui:field="buttonBed3" addStyleNames="{style.button}">Bedroom 3</g:ToggleButton>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
</ui:UiBinder> 